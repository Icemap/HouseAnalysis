<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/adapter_white_mesh">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <RelativeLayout
                android:id="@+id/rl_house_anjuke"
                android:layout_below="@+id/house_anjuke_unit_price"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                >
                <ImageView
                    android:id="@+id/house_anjuke_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

                <View
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/anjuke_sign"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/house_anjuke_title"
                android:shadowColor="#44000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/house_anjuke_address"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/house_anjuke_title"
                android:layout_toStartOf="@+id/rl_house_anjuke"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_room_num"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_address"
                android:layout_toStartOf="@+id/rl_house_anjuke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_area"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_room_num"
                android:layout_toStartOf="@+id/rl_house_anjuke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_flood"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_area"
                android:layout_toStartOf="@+id/rl_house_anjuke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_buildtime"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_flood"
                android:layout_toStartOf="@+id/rl_house_anjuke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_district"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_buildtime"
                android:layout_toStartOf="@+id/rl_house_anjuke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_good_at"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_district"
                android:layout_toStartOf="@+id/rl_house_anjuke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_total_price"
                android:layout_below="@+id/house_anjuke_title"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorIOSRed"
                />

            <TextView
                android:id="@+id/house_anjuke_unit_price"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_total_price"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>