<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/house_anjuke_title"
                android:shadowColor="#44000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/house_anjuke_address"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/house_anjuke_title"
                android:layout_toStartOf="@+id/house_anjuke_image"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_room_num"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_address"
                android:layout_toStartOf="@+id/house_anjuke_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_area"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_room_num"
                android:layout_toStartOf="@+id/house_anjuke_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_flood"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_area"
                android:layout_toStartOf="@+id/house_anjuke_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_buildtime"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_flood"
                android:layout_toStartOf="@+id/house_anjuke_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_district"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_buildtime"
                android:layout_toStartOf="@+id/house_anjuke_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_good_at"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_district"
                android:layout_toStartOf="@+id/house_anjuke_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTabBlueTrans"
                />

            <TextView
                android:id="@+id/house_anjuke_total_price"
                android:layout_below="@+id/house_anjuke_title"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                />

            <TextView
                android:id="@+id/house_anjuke_unit_price"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="14sp"
                android:layout_below="@+id/house_anjuke_total_price"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                />

            <ImageView
                android:id="@+id/house_anjuke_image"
                android:layout_below="@+id/house_anjuke_unit_price"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>